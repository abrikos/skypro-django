{% extends 'base.html'%}
{%block title%} Good {%endblock%}
{%block content%}
{% load static %}
div.d-flex
    {% for product in object_list %}
    div.card.m-2
        div.card-header
            h4.my-0.font-weight-normal {{ product.name }}
        div.card-body
            {%if product.image %}
            img.img-thumbnail(src="{{product.image.url}}")
            {%else%}
            img.img-thumbnail(src="{% static 'no-image-icon.png' %}")
            {%endif%}

            br
            strong Price:
            span $ {{product.price}}
            br
            strong Category:
            span {{product.category.name}}
            br
            strong Description:
            span {{product.desc|truncatechars:100}}
            br
            a(href="{%url 'product_detail' product.id%}") View
            button.btn.btn-lg.btn-block.btn-outline-primary Купить
    {%endfor%}
{%endblock%}
